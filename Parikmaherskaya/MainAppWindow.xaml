<Window x:Class="Parikmaherskaya.MainAppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Parikmaherskaya"
        mc:Ignorable="d"
        Title="Магазин кепок — Панель сотрудника" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Border Background="#D4AF37" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="Resources/Images/logo.png" Width="70" Margin="25,0,15,0" VerticalAlignment="Center"/>
                <TextBlock Text="Магазин кепок — Панель сотрудника"
                           FontSize="26" FontWeight="SemiBold" Foreground="White"
                           VerticalAlignment="Center" Grid.Column="1"/>
                <Button Content="Выход" Width="110" Height="40" FontSize="16"
                        Margin="20" Click="ExitButton_Click" Grid.Column="2"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="520">
            <TextBlock Text="Выберите раздел"
                       FontSize="34" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,30,0,30"/>

            <Button Content="Каталог кепок" Height="75" FontSize="20"
                    Click="ShowUslugi_Click" Margin="0,12"/>
            <Button Content="Записи клиентов" Height="75" FontSize="20"
                    Click="ShowZapisi_Click" Margin="0,12"/>
            <Button Content="Сотрудники" Height="75" FontSize="20"
                    Click="ShowSotrudniki_Click" Margin="0,12"/>
            <Button Content="Оплата и чеки" Height="75" FontSize="20"
                    Click="ShowOplata_Click" Margin="0,12"/>
        </StackPanel>

        <Border Background="#F8F9FA" Grid.Row="2">
            <TextBlock Text="© 2025 Магазин кепок. Все права защищены."
                       FontSize="13" Foreground="#888888"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
