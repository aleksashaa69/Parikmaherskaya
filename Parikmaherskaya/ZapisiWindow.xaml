<Window x:Class="Parikmaherskaya.ZapisiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Parikmaherskaya"
        mc:Ignorable="d"
        Title="Записи клиентов" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="White">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Записи клиентов" 
                   FontSize="36" FontWeight="Bold"
                   Foreground="#212529"
                   Margin="0,0,0,30"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Zapisi}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  RowHeight="60"
                  FontSize="15"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#EEEEEE">

            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Binding="{Binding IdZapisi}" Width="60"/>
                <DataGridTextColumn Header="Дата и время" Binding="{Binding DateTimeFormat}" Width="160"/>
                <DataGridTextColumn Header="Клиент" Binding="{Binding KlientFIO}" Width="220"/>
                <DataGridTextColumn Header="Мастер" Binding="{Binding MasterFIO}" Width="220"/>
                <DataGridTextColumn Header="Услуга" Binding="{Binding Usluga}" Width="*"/>
                <DataGridTextColumn Header="Стоимость" Binding="{Binding StoimostFormat}" Width="120"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
