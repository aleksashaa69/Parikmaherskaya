<Window x:Class="Parikmaherskaya.UslugiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Parikmaherskaya"
        mc:Ignorable="d"
        Title="Каталог услуг" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="White">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Каталог услуг"
                   FontSize="36" FontWeight="Bold"
                   Foreground="#212529"
                   Margin="0,0,0,20"/>

        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Поиск:" FontSize="16" FontWeight="Medium"
                       VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="SearchBox" Grid.Column="1"
                     FontSize="16" Padding="12,10"
                     TextChanged="SearchBox_TextChanged"/>
        </Grid>

        <DataGrid Grid.Row="2"
                  x:Name="UslugiDataGrid"
                  ItemsSource="{Binding Uslugi}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  RowHeight="55"
                  FontSize="15">

            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Binding="{Binding IdUslugi}" Width="60"/>
                <DataGridTextColumn Header="Услуга" Binding="{Binding Naimenovanie}" Width="2*"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Opisanie}" Width="3*"/>

                <DataGridTextColumn Header="Цена" Width="120" SortMemberPath="CenaSort">
                    <DataGridTextColumn.Binding>
                        <Binding Path="CenaFormat"/>
                    </DataGridTextColumn.Binding>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Margin" Value="0,0,15,0"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Длительность" Width="140" SortMemberPath="DlitelnostSort">
                    <DataGridTextColumn.Binding>
                        <Binding Path="DlitelnostFormat"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
