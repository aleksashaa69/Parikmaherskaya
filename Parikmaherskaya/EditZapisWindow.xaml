<Window x:Class="Parikmaherskaya.EditZapisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Parikmaherskaya"
        mc:Ignorable="d"
        Title="Редактирование записи" Height="700" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="White">
    <ScrollViewer Margin="30" VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <TextBlock Text="Редактирование записи" FontSize="28" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <TextBlock Text="Фамилия клиента" FontSize="16" FontWeight="Medium" Margin="0,0,0,5"/>
            <TextBox x:Name="FamiliyaBox" Padding="10" FontSize="16" Margin="0,0,0,15"/>

            <TextBlock Text="Имя клиента" FontSize="16" FontWeight="Medium" Margin="0,0,0,5"/>
            <TextBox x:Name="ImyaBox" Padding="10" FontSize="16" Margin="0,0,0,15"/>

            <TextBlock Text="Отчество клиента (необязательно)" FontSize="16" FontWeight="Medium" Margin="0,0,0,5"/>
            <TextBox x:Name="OtchestvoBox" Padding="10" FontSize="16" Margin="0,0,0,15"/>

            <TextBlock Text="Телефон клиента" FontSize="16" FontWeight="Medium" Margin="0,0,0,5"/>
            <TextBox x:Name="TelefonBox" Padding="10" FontSize="16" Margin="0,0,0,15"/>

            <TextBlock Text="Email клиента" FontSize="16" FontWeight="Medium" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailBox" Padding="10" FontSize="16" Margin="0,0,0,30"/>

            <TextBlock Text="Мастер" FontSize="16" FontWeight="Medium" Margin="0,0,0,5"/>
            <ComboBox x:Name="MasterComboBox" DisplayMemberPath="FIO" Padding="10" FontSize="16" Margin="0,0,0,15"/>

            <TextBlock Text="Услуга" FontSize="16" FontWeight="Medium" Margin="0,0,0,5"/>
            <ComboBox x:Name="UslugaComboBox" DisplayMemberPath="Naimenovanie" Padding="10" FontSize="16" Margin="0,0,0,15"/>

            <TextBlock Text="Дата" FontSize="16" FontWeight="Medium" Margin="0,0,0,5"/>
            <DatePicker x:Name="DatePicker" FontSize="16" Margin="0,0,0,15"/>

            <TextBlock Text="Время (чч:мм)" FontSize="16" FontWeight="Medium" Margin="0,0,0,5"/>
            <TextBox x:Name="TimeBox" Padding="10" FontSize="16" Margin="0,0,0,30"/>

            <TextBlock Text="Статус записи" FontSize="16" FontWeight="Medium" Margin="0,0,0,5"/>
            <ComboBox x:Name="StatusComboBox" FontSize="16" Padding="10" Margin="0,0,0,30">
                <ComboBoxItem Content="В ожидании"/>
                <ComboBoxItem Content="Подтверждена"/>
                <ComboBoxItem Content="Завершена"/>
                <ComboBoxItem Content="Неявка"/>
                <ComboBoxItem Content="Перенесена"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Сохранить" Width="200" Height="50" FontSize="18"
                        Margin="0,0,20,0" Click="Save_Click"/>
                <Button Content="Отмена" Width="150" Height="50" FontSize="18"
                        Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
